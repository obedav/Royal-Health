# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-database-password-here
DB_DATABASE=royal_health_db

# JWT Configuration - IMPORTANT: Generate strong, unique secrets
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-long
JWT_REFRESH_SECRET=your-different-super-secure-refresh-secret-minimum-64-characters
JWT_EXPIRES_IN=3600s

# Environment
NODE_ENV=development

# Production Database URLs (for deployment)
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_URL_DIRECT=postgresql://direct-connection-url
DATABASE_URL_POOLER=postgresql://pooler-connection-url

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Service (for notifications)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# SMS Service (for phone verification)
SMS_SERVICE_API_KEY=your-sms-service-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Error Tracking (Production)
SENTRY_DSN=https://your-sentry-dsn-here

# Application Settings
PORT=3001
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
S3_BUCKET_NAME=your-s3-bucket-name